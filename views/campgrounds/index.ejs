<% include ../partials/header %>

<div class="container">
<header class="jumbotron">
    <div class="container">
    <h1>Welcome to campgrounds</h1>
    <p>View our hand-picked campground picture!</p>
    <p>
        <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add a new Campground</a>
    </p>
    </div>
</header>
</div>
<div class="row text-center" style="display:flex; flex-wrap: wrap;">
    <!--<div class="col-lg-12">-->
    <!--    <h3>Our Most Popular Campground </h3>-->
    <!--</div>-->
    <% campgrounds.forEach(function(camp) { %>
        <div class="col-md-3 col-sm-6">
            <div class="thumbnail">
              <img src="<%=camp.image %>"></img>
            </div>
            <div class="caption">
                 <h4><%=camp.name%></h4>
            </div>
             <p>
                 <a href="/campgrounds/<%= camp._id%>" class="btn btn-primary">More Info</a>
             </p>
        </div>
<%})%>
</div>

<% include ../partials/footer %>